<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="scrollguard_secure_prefs" />
        <exclude domain="database" path="scrollguard_database" />
        <exclude domain="file" path="models/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow basic preferences during device transfer -->
        <include domain="sharedpref" path="." />
        <exclude domain="database" path="scrollguard_database" />
        <exclude domain="file" path="models/" />
    </device-transfer>
</data-extraction-rules>