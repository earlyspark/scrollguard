<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.ScrollGuard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_on_primary</item>
        <item name="colorPrimaryContainer">@color/md_theme_primary_container</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_on_primary_container</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_on_secondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_on_secondary_container</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorOnSurface">@color/md_theme_on_surface</item>
        <item name="colorSurfaceVariant">@color/md_theme_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_on_surface_variant</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/md_theme_background</item>
        <item name="colorOnBackground">@color/md_theme_on_background</item>

        <!-- System UI -->
        <item name="android:statusBarColor">@color/md_theme_primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.ScrollGuard" parent="Base.Theme.ScrollGuard" />

    <!-- Overlay theme for content filtering -->
    <style name="Theme.ScrollGuard.Overlay" parent="Theme.ScrollGuard">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.ScrollGuard.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.ScrollGuard</item>
    </style>

    <!-- Dialog themes -->
    <style name="Theme.ScrollGuard.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_on_primary</item>
    </style>

    <style name="Theme.ScrollGuard.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_on_primary</item>
    </style>

    <!-- Custom component styles -->
    <style name="Widget.ScrollGuard.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="Widget.ScrollGuard.Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/md_theme_primary</item>
        <item name="android:textColor">@color/md_theme_on_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.ScrollGuard.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/md_theme_primary</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.ScrollGuard.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/md_theme_primary</item>
        <item name="trackTint">@color/md_theme_primary_container</item>
    </style>

    <style name="Widget.ScrollGuard.Slider" parent="Widget.Material3.Slider">
        <item name="thumbColor">@color/md_theme_primary</item>
        <item name="trackColorActive">@color/md_theme_primary</item>
        <item name="trackColorInactive">@color/md_theme_surface_variant</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.ScrollGuard.Headline" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/md_theme_on_background</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.ScrollGuard.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/md_theme_on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.ScrollGuard.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_on_surface_variant</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <style name="TextAppearance.ScrollGuard.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/md_theme_on_surface_variant</item>
        <item name="android:alpha">0.7</item>
    </style>

    <!-- Toolbar styles -->
    <style name="Widget.ScrollGuard.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/md_theme_on_primary</item>
        <item name="subtitleTextColor">@color/md_theme_on_primary</item>
    </style>

    <!-- Progress styles -->
    <style name="Widget.ScrollGuard.ProgressBar" parent="Widget.Material3.LinearProgressIndicator">
        <item name="indicatorColor">@color/md_theme_primary</item>
        <item name="trackColor">@color/md_theme_surface_variant</item>
        <item name="trackThickness">8dp</item>
        <item name="trackCornerRadius">4dp</item>
    </style>
</resources>